{% extends "SonataAdminBundle:CRUD:edit.html.twig" %}

{% block actions %}

{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link href="{{ asset('vendors/select2/select2.css') }}" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('vendors/select2/select2.js') }}"></script>
{% endblock %}

{% block form %}
    {{ parent() }}

    {{ form_javascript(form) }}
    {{ form_stylesheet(form) }}
{% endblock %}

{% block formactions %}
    <div class="well well-small form-actions">
        {% if admin.hasroute('edit') and admin.isGranted('EDIT') %}
            <button class="btn btn-success" type="submit" name="btn_create_and_edit"><i class="fa fa-save"></i> {{ 'btn_save'|trans }}</button>
        {% endif %}
    </div>
{% endblock formactions %}